<%- include ./partials/header.ejs %>
  <body style="padding: 0">
    <div class="valign-wrapper" style="height: 100vh">
      <div cstyle="background-color: #ee6e73; padding: 0 50px" class="content">
        <div class="box-input card">
          <h5>Input your link to get short link</h5>
          <form class="/urls/new" action="" method="post">
            <div class="row">
              <div style="margin: 50px auto 20px;max-width: 300px;">
                <div class="input-field">
                  <input type="text" id="url" name="url" value="" required class="validate">
                  <label for="url">Your Link</label>
                </div>
              </div>
            </div>
            <button class="waves-effect waves-light btn" type="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </body>
  <script type="text/javascript">
    $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal').modal();
    });
  </script>
</html>
